        <TextBox Text="{Binding EmailToSend}" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="268,376,207.333,9.667" Width="318" BorderBrush="Black" RenderTransformOrigin="0.528,-2.58"/>
